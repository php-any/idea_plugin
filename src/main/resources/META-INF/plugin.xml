<idea-plugin>
    <id>com.company.zy-language-plugin</id>
    <name>ZY Language Support</name>
    <vendor email="support@company.com" url="https://company.com">Company</vendor>

    <description><![CDATA[
        ZY Language Support plugin for IntelliJ IDEA.
        Provides syntax highlighting, code completion, and LSP integration for .zy files.
        
        Features:
        - Syntax highlighting based on TextMate grammar
        - Code completion via LSP integration
        - Code navigation and symbol search
        - Error highlighting and diagnostics
    ]]></description>

    <change-notes><![CDATA[
        <h3>1.0.0</h3>
        <ul>
            <li>Initial release</li>
            <li>Basic syntax highlighting for .zy files</li>
            <li>LSP integration for code completion</li>
            <li>TextMate grammar support</li>
        </ul>
    ]]></change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type registration -->
        <fileType name="ZY File" implementationClass="com.company.plugin.language.ZyFileType" 
                  extensions="zy;cjp;cj" 
                  language="ZY" />
        
        <!-- Syntax highlighting -->
        <lang.syntaxHighlighterFactory language="ZY" implementationClass="com.company.plugin.highlighting.ZySyntaxHighlighterFactory" />
        
        <!-- Code completion -->
        <completion.contributor language="ZY" implementationClass="com.company.plugin.completion.ZyCompletionContributor" />
        
        <!-- Navigation -->
        <chooseByNameContributor implementation="com.company.plugin.navigation.ZyNavigationProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
